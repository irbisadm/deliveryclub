{% extends 'DCAdminBundle:Default:index.html.twig' %}
{% block content %}
<div class="row-fluid">
  <div class="span12">
    <div class="form_inputs clearfix">
      <div class="row-fluid">
        <div class="span2">
          <label class="control-label">User search:</label>
        </div>

        <div class="span10">
          <div class="input-append">
            <input type="text" style="width:85%" placeholder="enter username, email or phone"><button type="button" class="btn">Search!</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
      <div class="widget_wrapper">
          <div class="widget_header">
              <h3 class="icos_table">Users of system</h3>

              <div class="widget_option">
                  <a data-toggle="dropdown" href="#" class="icos_settings"></a>
                  <ul class="dropdown-menu gradient settings_dropdown widget_option_dropdown pull-right">
                      <li><a href="#" ><i class="icon-plus-sign"></i> Add</a></li>
                      <li><a href="#" ><i class="icon-pencil"></i>Edit</a></li>
                      <li><a href="#" ><i class="icon-heart"></i>Do whatever you like</a></li>
                  </ul>
              </div>
          </div>

          <div class="widget_content no-padding">
              <table width="100%" cellspacing="0" cellpadding="0" class="default_table">
                  <thead>
                  <tr>
                      <td>Type</td>
                      <td>Username</td>
                      <td>Email</td>
                      <td>Phone</td>
                      <td>Action</td>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                      <td><img width="24" alt="Operator" src="{{ asset('/bundles/dcadmin/img/icons/colored/headset.png') }}"> </td>
                      <td>Row 2</td>
                      <td>Row 3</td>
                      <td>Row 4</td>
                      <td>Row 5</td>
                  </tr>
                  <tr>
                      <td><img width="24" alt="Administrator" src="{{ asset('/bundles/dcadmin/img/icons/colored/administrator.png') }}"></td>
                      <td>Row 2</td>
                      <td>Row 3</td>
                      <td>Row 4</td>
                      <td>Row 5</td>
                  </tr>
                  <tr>
                      <td><img width="24" alt="Restaurant manager" src="{{ asset('/bundles/dcadmin/img/icons/colored/group.png') }}"></td>
                      <td>Row 2</td>
                      <td>Row 3</td>
                      <td>Row 4</td>
                      <td>Row 5</td>
                  </tr>
                  <tr>
                      <td><img width="24" alt="User" src="{{ asset('/bundles/dcadmin/img/icons/colored/user_woman.png') }}"></td>
                      <td>Row 2</td>
                      <td>Row 3</td>
                      <td>Row 4</td>
                      <td>Row 5</td>
                  </tr>
                  </tbody>
              </table>
          </div>
      </div><!-- widget_wrapper end -->
  </div>
</div>
{% endblock %}